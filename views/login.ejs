<%- include scripts %>

    <div class="navbar-fixed hoverable">
        <nav style="background-color: #1e88e5">
            <div class="nav-wrapper col s10">
                <a href="#" class="brand-logo left">Sure</a>
                <!-- <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li><a id="show-info" onclick="M.toast({html: 'Abhiram Vanka'})" href="">Click here</a></li>
                </ul> -->
            </div>
        </nav>

    </div>

    <div class="row">
        <div class="col s1"> </div>
        <div class="col s10 card-panel hoverable yellow lighten-5">
            <div class="row">
                <div class="col s2" style="text-align: center">
                    <a class="waves-effect hoverable waves-light btn" href="/" style="background-color: #1e88e5;"><i class="material-icons left">home</i>Home</a>
                </div>
                <div class="col s8">
                    <div class="card-panel blue hoverable" style="text-align: center">
                        <span class="white-text">
                           Welcome to LOGIN
                            </span>
                    </div>
                </div>
                <div class="col s2" style="text-align: center">
                    <a class="waves-effect hoverable waves-light btn" href="/signup" style="background-color: #1e88e5;"><i class="material-icons left">add</i>Signup</a>
                </div>
            </div>
            <div class="row">
                <div class="col s2"></div>
                <div class="col s8">
                    <div class="row">
                        <form class="col s12" action="/login" method="POST">
                            <div class="row">
                                <div class="input-field col s6">
                                    <i class="material-icons prefix">account_circle</i>
                                    <input id="icon_prefix" name="email" type="text" class="validate">
                                    <label for="icon_prefix">Email</label>
                                </div>
                                <div class="input-field col s6">
                                    <i class="material-icons prefix">security</i>
                                    <input id="icon_telephone" name="password" type="password" class="validate">
                                    <label for="icon_telephone">Password</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12" style="text-align: center">
                                    <button class="btn waves-effect waves-light" style="background-color: #1e88e5" type="submit" name="action">Login
                            <i class="material-icons right">send</i>
                          </button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
                <div class="col s2"></div>
            </div>
            <% if (message.length > 0) { %>
                <div class="row col s12">
                    <div class="col s4"> </div>

                    <div class="col s4  ">

                        <div class="card-panel red hoverable" style="text-align: center">
                            <span class="white-text">
                                        <%= message %>    
                             </span>

                        </div>

                        <div class="col s2">

                        </div>
                    </div>
                </div>
                <% } %>
        </div>
        <div class="col s1"> </div>
    </div>